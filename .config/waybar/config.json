  "spacing": 0, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces", "custom/waybar_media"],
  "modules-center": [
    // "hyprland/window"
    "clock",
    // "custom/media",
    "mpd",
    "custom/notification",
    "custom/recording_status"
  ],
  "modules-right": [
