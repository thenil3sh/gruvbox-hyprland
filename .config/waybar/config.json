  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "Û∞Çö",
      "none": "",
      "dnd-notification": "",
      "dnd-none": "",
      "inhibited-notification": "Û∞Çö",
      "inhibited-none": "",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
